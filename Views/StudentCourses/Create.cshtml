@model AccFlex.Models.StudentCourse

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-muted text-center">
    <i class="bi bi-collection"></i>
    Assigning Student to Course
</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CourseID" class="control-label"></label>
                <select asp-for="CourseID" class="form-control" asp-items="ViewBag.CourseID"></select>
            </div>
            <div class="form-group">
                <label asp-for="StudentID" class="control-label"></label>
                <select asp-for="StudentID" class="form-control" asp-items="ViewBag.StudentID"></select>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success mt-4">
                    <i class="bi bi-check-circle-fill"></i>
                    Save
                </button>

                <a class="btn btn-outline-primary mt-4" asp-action="Index">
                    <i class="bi bi-x-circle-fill"></i>
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
